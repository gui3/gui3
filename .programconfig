#!dotprogram

scripts:
  - topages:
    arguments:
      - path: folder to send to github pages
    description: |
      commits the contents of the specified folder 
      (./public/ in this repo)
      to the gh-pages branch on github
    process:
      - js: |
        if (arguments.length !== 1) {
          throw new Error("you must provide a folder path")
        }
        register("path", arguments[0])
      - exec: |
        git checkout master
        && git subtree push --prefix $path origin gh-pages

  - lazypush: |
    git add .
    && git commit -m "$@"
    && git push


